---
import LongSection from './LongSection.astro';
import { buySectionData, productData } from '../data/buy_section';
---

<LongSection
  title="NACON PCCH-375"
  color="white"
  pt="pt-5"
  textSize="text-[40px]"
  id="buysection"
>
  <article
    slot="main"
    class="text-white flex flex-col xl:flex-row items-center justify-center w-screen"
  >
    <div
      class="flex flex-col lg:flex-row justify-around gap-16 xl:gap-24 py-10"
    >
      {
        productData.map((product) => (
          <div class="flex flex-col items-center justify-center">
            <img
              src={product.imgSrc}
              alt={product.title}
              class="w-[25.6rem] pr-5"
            />
            {/* <div class="flex flex-row gap-3 md:gap-5 items-center justify-center">
              {product.buySectionStores.map((store) => (
                <a href={store.link} target="_blank">
                  <img src={store.src} alt={store.alt} class="w-16" />
                </a>
              ))}
            </div> */}
          </div>
        ))
      }
    </div>
  </article>

  <div slot="footer" class="mb-8 text-white w-3/4">
    <div
      class="flex flex-col md:flex-row justify-center md:justify-between items-center gap-5"
    >
      <div class="flex flex-row gap-2">
        <a
          href="https://www.facebook.com/Nacongaming/?brand_redir=618785068327460"
          target="_blank"
        >
          <img src="/pcch375/facebook.svg" alt="Facebook" class="w-8 md:w-10" />
        </a>

        <a
          href="https://www.instagram.com/nacongamers_es/?hl=es"
          target="_blank"
        >
          <img
            src="/pcch375/instagram.svg"
            alt="Instagram"
            class="w-8 md:w-10"
          />
        </a>

        <a href="https://twitter.com/NacongamingES?" target="_blank">
          <img src="/pcch375/x.svg" alt="Twitter" class="w-8 md:w-10" />
        </a>

        <a href="https://www.youtube.com/@NacongamingEspana" target="_blank">
          <img src="/pcch375/youtube.svg" alt="YouTube" class="w-8 md:w-10" />
        </a>
      </div>
      <div>
        <img src="/pcch375/naconlogo.svg" alt="RIG" class="w-16 md:w-24" />
      </div>
    </div>

    <div>
      <p>
        Desarrollado por SITELICON ECOMMERCE SERVICES 2024 | Todos los derechos
        reservados.
      </p>
    </div>
  </div>

  <img
    slot="background"
    src={buySectionData.background}
    class="object-center object-cover h-full w-full"
  />
</LongSection>
