---
import LongSection from "./LongSection.astro";
import { generalDemoData } from "../data/general_demo";
---

<LongSection
  title="ERGONOMIA PERSONALIZADA"
  subtitle="Diseñada especialmente para ser tu mejor compañera en tu día a día"
  color="black"
  pt="pt-5 xl:pt-20"
  textSize="text-[36px] xl:text-[40px]"
>
  <article slot="main" class="flex flex-col items-center justify-center">
    <div
      class="text-black flex flex-col lg:flex-row justify-around gap-10 xl:gap-24 py-10 px-5"
    >
      {
        generalDemoData.map((product) => (
          <div class="flex flex-col items-center gap-2">
            <video
              src={product.video}
              class="rounded-2xl w-full max-w-lg md:max-w-md"
              muted
              loop
              autoplay
            />
            <div class="flex flex-col gap-2 w-3/4">
              <p class="tracking-wide font-bold">{product.title}</p>
              <p class="tracking-wide text-sm">{product.description}</p>
            </div>
          </div>
        ))
      }
      <!-- {
        generalDemoData.map((product) => (
          <div class="flex flex-col items-center gap-2">
            <video
              src={product.video}
              loop
              autoplay
              muted
              playsinline
              class="rounded-2xl w-full max-w-lg xl:max-w-2xl"
            />
            <div class="flex flex-col gap-2 w-3/4">
              <p class="tracking-wide font-bold">{product.title}</p>
              <p class="tracking-wide text-sm">{product.description}</p>
            </div>
          </div>
        ))
      } -->
    </div>
  </article>

  <div slot="footer" class="pb-10">
    <a
      class="border-[3px] border-black backdrop-blur-sm text-sm rounded font-bold text-black px-12 py-2 inline-block hover:bg-black hover:text-white transition-colors"
      href="#buysection"
    >
      COMPRAR AHORA
    </a>
  </div>

  <div
    slot="background"
    class="bg-gradient-to-b from-zinc-100 to-zinc-300 object-center object-cover h-full w-full"
  >
  </div>
</LongSection>
